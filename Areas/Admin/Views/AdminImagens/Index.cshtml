<div class="container-fluid">
    <div class="row d-flex">
                <div class="col-6">
                    <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="UploadFiles">
                        <div class="form-group">
                            <div class="col-md-10">
                                <p><b>Selecione um ou mais arquivos para enviar:</b></p>
                                <p>(Arquivos com o mesmo nome ser√£o sobrescritos)</p>
                                <input type="file" name="files" multiple class="btn btn-outline-primary"/>
                            </div>
                        </div>
                        </hr>
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Enviar arquivo(s)" class="button btn-outline-primary"/> 
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-6">
                    <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="GetImages">
                        <div class="form-group">
                            <div class="col-md-10">
                                <p><strong>Visualizar imagens na pasta do servidor:</strong></p>
                            </div>
                        </div>
                        </hr>
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Visualizar arquivos no servidor" class="button btn-outline-warning"/> 
                            </div>
                        </div>
                    </form>
                </div>
        <div class="row">
            @if(ViewData["Deletado"] != null)
            {
                <li>@ViewData["Deletado"]</li>
            }
        </div>
    </div>
</div>